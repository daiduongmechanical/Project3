@model Project3.Models.ServicePrice

@{
    Layout = BaseText.AdminLayout;
    var service = ViewData["service"] as List<Service>;
}



<div class="container" style="min-height:100vh;min-height:40vh;background-color:white;padding:0 2rem">
    <div style="display:flex;justify-content:space-between;align-items:center ">
        <h1 class="mb-3">Create New Price Service</h1>
        <div>
            <a asp-action="Index" role="button" class="btn btn-secondary">Back to List</a>
        </div>

    </div>
    <div class="col-md-5">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="ServiceId"></label>
                @if (service != null)
                {
                    <select asp-for="ServiceId" class="form-control">
                        @foreach(var i in service)
                        {
                            <option value="@i.Id">@i.Name</option>
                        }
                    
                    </select>
                }
               
                <span asp-validation-for="ServiceId" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="Duration">Duration(Month)</label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



