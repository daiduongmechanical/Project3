<h1 class="mb-3" style="text-align:center">Hobbies List</h1>
<div class="container" style="min-height:100vh;background-color:white;box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px; padding:1rem;padding-bottom:1rem">
    @if (TempData.ContainsKey("ErrorMessage"))
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }



    <a asp-action="createHobbies" class="btn btn-warning mb-2">Create New</a>
    <table id="myTable" class="table table-hover table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th class="text-center">Name</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {


                foreach (var price in Model)
                {
                    <tr>
                        <td class="text-center">@price.Name</td>
                        <td class="text-center">
                            <a asp-action="editHobbies" asp-route-id="@price.Id">Edit</a> |
                            <a asp-action="deleteHobbies" asp-route-id="@price.Id" onclick="return confirm('Are you sure you want to delete this item?')">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
