@model IEnumerable<Project3.Models.User>

@{
    ViewData["Title"] = "listUser";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}



<h1>List User</h1>

<form asp-action="SearchUser" method="get" class="form-inline" onsubmit="return validateSearchForm()">
    <div class="form-group mx-sm-3 mb-2">
        <input type="text" name="search" id="search" class="form-control" placeholder="Search user here">
    </div>
    <button type="submit" class="btn btn-primary mb-2">Search</button>
    <a asp-action="listUser" class="btn btn-secondary mb-2 ml-2">All</a>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.Password)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.Description)
            </th> *@
            @* <th>
                @Html.DisplayNameFor(model => model.Avatar)
            </th> *@
            @* <th>
                @Html.DisplayNameFor(model => model.Dob)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Verified)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedDate)
            </th> *@
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            var blocked = item.IsBlocked ? "bg bg-danger" : "";
            <tr class="@blocked" >
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            @* <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            @* <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td> *@
            @* <td>
                @Html.DisplayFor(modelItem => item.Avatar)
            </td> *@
            @* <td>
                @Html.DisplayFor(modelItem => item.Dob)
            </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Verified)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            @* <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedDate)
            </td> *@
                <td>
                    @if (!item.IsBlocked)
                    {
                        <a asp-action="BlockUser" asp-route-id="@item.Id" class="btn btn-danger" >Block</a>
                    }
                    else
                    {
                        <a asp-action="UnblockUser" asp-route-id="@item.Id" class="btn btn-success" >Unblock</a>
                    }
                </td>

        </tr>
}
    </tbody>
</table>

<script>
    function validateSearchForm() {
        var searchTerm = document.getElementById("search").value.trim();
        if (searchTerm === "") {
            alert("Please input name to search");
            return false;
        }
        return true;
    }
</script>
