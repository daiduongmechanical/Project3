@model Role
@{
    ViewData["Title"] = "EditRole";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h2>Edit Role</h2>

<form asp-action="EditRole" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="RoleName"></label>
        <input asp-for="RoleName" class="form-control" readonly />
    </div>


    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="ListRole" class="btn btn-secondary">Back to List</a>
</form>

