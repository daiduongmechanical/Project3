@model Project3.Models.Service

@{
    Layout = BaseText.AdminLayout;
}


<div class="container" style="min-height:100vh;min-height:100vh;background-color:white;padding:0 2rem">
    <div style="display:flex;justify-content:space-between;align-items:center ">
        <h1 class="mb-3">Create Service</h1>
        <div>
            <a asp-action="Index" role="button" class="btn btn-secondary">Back to List</a>
        </div>

    </div>
    <div class="col-md-5">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

          
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>