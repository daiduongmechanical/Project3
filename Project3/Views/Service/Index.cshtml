@model IEnumerable<ServiceContent>
@{
    var id = ViewData["id"];
    var first = id == null ? Model.First() : Model.FirstOrDefault(m => m.Id == int.Parse(id.ToString()));
    var  serviceId = ViewData["serviceid"];
}
<link href="~/fe/css/style-service.css" rel="stylesheet">
<div class="single-news">
    <div class="">
        <div class="row">
            @if (Model != null)
            {


                <div class="col-lg-8">

                <div class="sn-container">
                    <div class="sn-img">
                            <h1 class="sn-title">@first.Title</h1>
                            <small>@first.CreatedDate</small> <br/>
                        <img style="width:100% ; aspect-ratio:3/2 " src="~/images/@first.image" />
                    </div>
                    <div class="sn-content">
                       
                        @Html.Raw(first.Content)
                    </div>
                </div>

                    </div>

            }
            <div class="col-lg-4">
                <div class="sidebar">
                    <div class="sidebar-widget">
                        <h2 class="sw-title">In This Category</h2>
                        <div class="news-list">


                            @foreach (var i in Model)
                            {
                                var link = $"/service/{serviceId}/{i.Id}";
                                if (i.Id != first.Id)
                                {


                                    <div class="nl-item">
                                        <div class="nl-img">
                                            <img src="~/images/@i.image" />
                                        </div>
                                        <div class="nl-title">
                                            <a href="@link">@i.Title</a>
                                        </div>
                                    </div>


                                  
                                }

                            }

                  
                        </div>
                    </div>

                    <div class="sidebar-widget">
                        <div class="image">
                            <a href="https://htmlcodex.com"><img src="img/ads-2.jpg" alt="Image"></a>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>

<!-- Single News End-->    