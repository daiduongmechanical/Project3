                    <li class="nav-item">
                        <a class="nav-link" href="contact.html">About Us</a>
                    </li>
                </ul>
            </div>
            <div class="functional-buttons">
                <ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        var nameIdentifier = User.FindFirstValue(ClaimTypes.NameIdentifier);

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">
                                @User.FindFirstValue(ClaimTypes.NameIdentifier)
                            </a>
                        </li>
                        <li><a asp-action="Logout" asp-controller="User">Log Out</a></li>
                    }else{
                        <li><a asp-action="Login" asp-controller="User">Sign in</a></li>
                        <li><a asp-action="Register" asp-controller="User">Register</a></li>
                    }
                   

                        
                        

                   
                    
                </ul>
            </div>
        </div>
